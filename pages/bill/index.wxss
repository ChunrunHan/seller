.top-box{
  background: white;
  margin: 10px 0px;
  height: 80px;
  position: relative;

}

.box-img{
  position: absolute;
  width: 50px;
  height: 50px;
  top:15px;
  left: 45%;
  margin-left: -40px;
  
}

.left-img{
  width: 20px;
  height: 20px;
  vertical-align: middle;
  margin-right: 5px;
}

.box-text{
  text-align: center;
  height: 50px;
  top:15px;
  position: absolute;
  left: 50%;
  margin-left:-5px;
}


.left-box{
  text-align: center;
  position: absolute;
  right: 50px;
  top:14px;
  font-size: 15px;
}
.right-box{
  text-align: center;
  position: absolute;
  bottom: 14px;
  right: 50px;
  font-size: 15px;
}






.weui-tab__panel{
  width: 100%;
}
.mui-table-view {
    position: relative;
    margin-top: 0;
    margin-bottom: 0;
    padding-left: 0;
    list-style: none;
    background-color: #fff;
    width: 100%;
}
.li{
	background: white;
	margin-bottom: 10px;
	border-bottom: 5px solid #f4f4f4;
}
.deal-top{
	text-align: center;
	width: 100%;
	position: relative;
	height: 40px;
	line-height: 35px;
	padding:0px 10px;
}
.deal-center{
	margin:0px 10px;
	line-height: 25px;
	border-bottom:1px solid #f4f4f8;
	/* padding:10px 0px; */
  padding-top: 10px;
  padding-bottom: 5px;
}
.name{
	font-size: 17px;
	color: black;
	margin-right: 10px;
}
.today{
	float: left;
  font-size: 15px;
}
.status{
	position: absolute;
	left: 10px;
	top: 22px;
	font-size: 14px;
	color: gray;
}
.phonebox{
	position: absolute;
	
}
.other{
	color:#F05141;
}
.title{
	padding-bottom: 10px;
}
.goodsimg{
	margin-top: 5px;
	height: 40px;
	width: 40px;
}
.goodsbox{
	height: 50px;
	border-top:1px solid #f4f4f8;
	line-height: 50px;
	position: relative;
	font-size: 15px;
}
.goodsname{
	margin-left:10px;
	position: absolute;
	font-size: 15px;
	text-align: left;
	width: 45vw;
	overflow: hidden; 
    text-overflow: ellipsis;
    white-space:nowrap;
}
