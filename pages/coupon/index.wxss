.couponBox .coupon-content .title {
  margin-top: 2vh;
  font-size: 1.2rem;
  font-weight: 600;
}

.couponBox .coupon-content .description {
  margin-top: 1.5vh;
  font-size: 14px;
  color: rgba(7, 17, 27, 0.6);
}

.couponBox .coupon-content .time {
  margin-top: 1vh;
  font-size: 13px;
  color: rgba(7, 17, 27, 0.6);
}

.couponBox .coupon-right.active {
  position: relative;
  float: left;
  height: 100%;
  width: 35%;
  text-align: center;
  background: -webkit-linear-gradient(left, #ff285c, #f34f2b);
  background: -o-linear-gradient(right, #ff285c, #f34f2b);
  background: -moz-linear-gradient(right, #ff285c, #f34f2b);
  background: linear-gradient(to right, #ff285c, #f34f2b);
  border-bottom-right-radius: 10px;
  border-top-right-radius: 10px;
}

.couponBox .coupon-right.no {
  position: relative;
  float: left;
  height: 100%;
  width: 35%;
  text-align: center;
  background-color: rgba(7, 17, 27, 0.2);
  border-bottom-right-radius: 10px;
  border-top-right-radius: 10px;
}

.coupon-right .circle {
  position: absolute;
  right: -10%;
  top: 35%;
  width: 8vw;
  height: 5vh;
  border-radius: 50%;
  background-color: rgb(240, 240, 242);
}

.coupon-right .money {
  margin-top: 5vh;
  font-size: 1rem;
  color: #fff;
}

.coupon-right .money .number {
