<!--index.wxml-->
<view class="width100">

  <image src='../../images/logo.jpg' class='about-logo'></image>
   <view class="weui-cells mgt-20" id='goods'>
    <block wx:for="{{list}}">
       <view class="weui-cell weui-cell_select" id='{{index}}' hover-class="weui-cell_active" style='padding:10px 15px;'   bindtap='callMobile'>
        <view class="weui-cell__hd">
          <image src="{{item.icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">{{item.name}}</view>
          <view class="weui-cell__ft">
          {{item.content}}
          </view> 
    </view>
    </block>

  </view>




</view>

