/**index.wxss**/

.loading{
  text-align: center;
}

#box{
  /* height: 300px; */
}

.img-src {
    width: 100%;
    border-radius: 3px;
}

.weui-uploader__bd {
  margin-bottom:0px;
  margin-right:0px;
  overflow:hidden;
  width: 100%;
}

.img-box {
  position: relative;
  float:left;
  margin-right:9px;
  margin-bottom:9px;
  width:30%;
  margin:5px 1.6%;
}

.weui-uploader__img {
  display:block;
  width:100%;
  height:calc(100vw/3.5);

}

.cancel{
  position: absolute;
  top:0px;
  right:0px;
}


.show-area{
  background: #efeff4;
  width: 100%;
  height: auto;
}
.show-area .area-box{
  display: inline-block;
  border-radius: 20px;
  background: white;
  padding: 5px 5px;
  margin: 5px;
}

.memo-showbox{
  position: relative
}
.memo-showbox image{
  width: 100%;
}

.left-img{
  width: 25px;
  height: 20px;
  vertical-align: middle;
  position: relative;
  margin-right: 5px;
}

.right-img{
   width: 25px;
  height: 20px;
  position: absolute;
  right: 20px;

}


.btn-auto{
  border: 1px solid #f05141;
  border-radius: 5px;
  padding:2px 5px;
  color:#f05141;
}
.btn-auto:hover{
  background: #f05141;
  color: white;
}