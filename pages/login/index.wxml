      </view>
    </view>
  </view> -->

  <button id="login-btn" class="switch-commit mt-20" bindtap='goIndex'>登录</button>

  <div class="mui-content-padded mt-10">
    <div class="link-area color-auto">
      <a id="forget-password">忘记密码?</a>
    </div>
  </div>

  <div class="mui-content-padded mgt-0">
    <div class="text-center color-auto">
      <a id="go-application">申请成为商家</a>
    </div>
  </div>



</view>