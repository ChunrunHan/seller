.weui-uploader__bd {
  margin-bottom:0px;
  margin-right:0px;
  overflow:hidden;
  width: 100%;
}

.img-box {
  position: relative;
  float:left;
  margin-right:9px;
  margin-bottom:9px;
  width:30%;
  margin:5px 1.6%;
}

.weui-uploader__img {
  display:block;
  width:100%;
  height:calc(100vw/3.5);

}

.cancel{
   /* display: inline-block; */
  position: absolute;
  top:0px;
  right: 0px;
   background: white; 
  border: 2px solid white;
  border-radius: 50%;
}


