.bill-bottom view{
  font-family: 'Helvetica Neue', Helvetica, sans-serif;
  height: 30px;
  line-height: 30px;
}

.bill-bottom:before{
    position: absolute;
    right: 15px;
    top: 10px;
    left: 15px;
    height: 1px;
    content: '';
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    background-color: #c8c7cc;
}
